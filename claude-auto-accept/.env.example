# Claude Auto-Accept Configuration

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Auto-accept mode (enabled/disabled)
AUTO_ACCEPT_ENABLED=false

# Session timeout in minutes
SESSION_TIMEOUT=60

# Maximum auto-accepts per session
MAX_AUTO_ACCEPTS=100

# Allowed operations (comma-separated)
# Options: git_operations,file_operations,network_operations,all
ALLOWED_OPERATIONS=git_operations,file_operations

# Security whitelist patterns (comma-separated regex patterns)
WHITELIST_PATTERNS=^git\s+(add|commit|push|pull),^npm\s+(install|run),^mkdir,^touch

# Audit log file path
AUDIT_LOG_PATH=./logs/auto-accept-audit.log

# Claude Code settings directory
CLAUDE_SETTINGS_DIR=./.claude

# Enable/disable safety checks
SAFETY_CHECKS_ENABLED=true

# Confirmation bypass patterns (patterns that should always be auto-accepted)
BYPASS_PATTERNS=^Do you want to proceed,^Continue with,^Are you sure

# Dangerous operation patterns (patterns that should never be auto-accepted)
DANGER_PATTERNS=^rm\s+-rf,^sudo\s+rm,^delete.*database,^drop.*table

# Hook integration mode (passive/active)
HOOK_MODE=passive