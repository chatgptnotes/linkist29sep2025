# Claude Auto-Accept Configuration - AUTO-ACCEPT ALL MODE

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Auto-accept mode - SET TO TRUE FOR AUTO-ACCEPT ALL
AUTO_ACCEPT_ENABLED=true

# Session timeout in minutes (720 = 12 hours for longer sessions)
SESSION_TIMEOUT=720

# Maximum auto-accepts per session (10000 = effectively unlimited)
MAX_AUTO_ACCEPTS=10000

# Allowed operations - SET TO 'all' TO ACCEPT EVERYTHING
# Options: git_operations,file_operations,network_operations,all
ALLOWED_OPERATIONS=all

# Security whitelist patterns - SET TO .* TO MATCH EVERYTHING
WHITELIST_PATTERNS=.*

# Audit log file path
AUDIT_LOG_PATH=./logs/auto-accept-audit.log

# Claude Code settings directory
CLAUDE_SETTINGS_DIR=./.claude

# Safety checks - SET TO FALSE FOR AUTO-ACCEPT ALL MODE
SAFETY_CHECKS_ENABLED=false

# Confirmation bypass patterns - SET TO .* TO BYPASS EVERYTHING
BYPASS_PATTERNS=.*

# Dangerous operation patterns - EMPTY FOR AUTO-ACCEPT ALL MODE
# No operations are considered dangerous in auto-accept all mode
DANGER_PATTERNS=

# Hook integration mode - SET TO 'active' FOR AUTOMATIC INTERCEPTION
HOOK_MODE=active